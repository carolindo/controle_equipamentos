<br>
<h1>Relação de Equipamentos</h1>

<table id='header_tabela' border="0" class='tabela'>
  <tr id='header_tabela'>
  	<td>DESCRIÇÃO</td>
	<td>MODELO</td>
	<td>SÉRIE</td>
	<td align='center'>AÇÃO</td>
  </tr>

<% @components.each do |component| %>
  <tr id='linha_tabela'>
    <td><%= component.description %></td>
    <td><%= component.model %></td>
    <td><%= component.serial %></td>
    <td><%= link_to image_tag ('show_ico.png', :border =>0), component %>
        <%= link_to image_tag ('edit_ico.png', :border =>0), edit_component_path(component) %>
        <%= link_to image_tag ('delete_ico.png', :border =>0), component, 
             :confirm => 'Tem certeza?', :method => :delete %>
	</td>
  </tr>
<% end %>
</table>

<br />
<%= form_tag("/components/new") %>
<table border="0" class='tabela'>
	<tr>
	   <td><%= submit_tag "Incluir", :id => "btnSubmit", :onmouseover => "this.style.cursor='pointer';"  %></td>
	</tr>
</table>
